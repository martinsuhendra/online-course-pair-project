<!DOCTYPE html>
<html lang="en">
        <% include ./partials/head %>

	<body class="header-collapse">
		
		<div id="site-content">

        <% include ./partials/header %>
			<main class="main-content" style="margin-top:10%">
				<div class="row">
					<div class="container-fluid">
						<div class="col-md-2"></div>
						<div class="col-md-8">
                            <center>
                                <h1>Student Appointment</h1>
                                <table class="table table-bordered table-striped">
                                    <thead>
                                        <tr>
                                            <th>Id</th>
                                            <th>Teacher Name</th>
                                            <th>Instrument</th>
                                            <th>Date</th>
                                            <th>Status</th>
                                            <th>Give Rate</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% schedules.forEach((teacher, index) => { %>
                                        <tr>
                                            <td><%= index + 1 %></td>
                                            <td><%= getFullName(teacher.Teacher.first_name, teacher.Teacher.last_name) %></td>
                                            <td><%= teacher.Teacher.instrument %></td>
                                            <td><%= getDate(teacher.date) %></td>
                                            <td><%= teacher.status %></td>
                                            <% if(teacher.status == 'confirmed') { %>
                                                <% if(teacher.teacherRating == false) { %>
                                                    <td>
                                                        <form action="/dashboard/<%= teacher.id %>/give-rate" method="post">
                                                            <select name="rating">
                                                                <% for(let i = 1; i <= 5; i++) { %>
                                                                    <option value="<%= i %>"><%= i %></option>
                                                                <% } %>
                                                            </select>
                                                            <button type="submit" class="btn btn-primary">Rate</button>
                                                        </form>
                                                    </td>
                                                <% } else { %>
                                                    <td>rated</td>
                                                <% } %>
                                            <% } else { %>
                                                <td>No Rate</td>
                                            <% } %>
                                        </tr>
                                        <% }) %>
                                    </tbody>
                                </table>
                            </center>

						<div class="col-md-2"></div>

					</div>
                </div>
            </div>
			</main> <!-- .main-content -->

		<% include ./partials/footer %>

		</div> <!-- #site-content -->

		<% include ./partials/script-js %>

	</body>

</html>